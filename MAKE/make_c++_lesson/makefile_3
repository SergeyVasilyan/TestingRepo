SDIR := ./src1
ODIR := $(SDIR)/obj1
BINDIR := ./bin1
SOURCES:= $(wildcard $(SDIR)/*.cpp)
OBJECTS:= $(patsubst $(SDIR)/%.cpp, $(ODIR)/%.o, $(SOURCES))
CXX = g++
TARGET := program1

#$(BINDIR)/program: $(0DIR) $(OBJECTS)
#	${CXX} $(OBJECTS) -o $(BINDIR)/$(TARGET)

$(ODIR)/%.o: $(SDIR)/%.cpp
	${CXX} -c $< -o $@
clean:
	rm $(OBJECTS) $(BINDIR)/$(TARGET)
dir:
	@mkdir -p $(ODIR)
	@mkdir -p $(BINDIR)

valgrind:
	valgrind --leak-check=full -v $(BINDIR)/$(TARGET)



