TOP := $(PWD)
ODIR := $(TOP)/obj
SDIR := $(TOP)/src
BINDIR := $(TOP)/bin
TARGET := fib
SOURCE_CPP = $(SDIR)/main_$(TARGET).cpp
SOURCE_OBJ = $(ODIR)/main_$(TARGET).o
CXX = g++

$(BINDIR)/$(TARGET): $(0DIR) $(SOURCE_OBJ)
	${CXX} $(SOURCE_OBJ) -o $(BINDIR)/$(TARGET)

$(SOURCE_OBJ):
	${CXX} -c $(SOURCE_CPP) -o $(SOURCE_OBJ)

.PHONY: clean
clean:
	rm $(SOURCE_OBJ) $(BINDIR)/$(TARGET)
