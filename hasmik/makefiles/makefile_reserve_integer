TOP := $(PWD)
ODIR := $(TOP)/obj
SDIR := $(TOP)/src
BINDIR := $(TOP)/bin
CPP_FILE := reserve_integer
SOURCE_CPP = $(SDIR)/$(CPP_FILE).cpp
SOURCE_OBJ = $(ODIR)/$(CPP_FILE).o
CXX = g++

$(BINDIR)/$(CPP_FILE): $(0DIR) $(SOURCE_OBJ)
	${CXX} $(SOURCE_OBJ) -o $(BINDIR)/$(CPP_FILE)

$(SOURCE_OBJ):
	${CXX} -c $(SOURCE_CPP) -o $(SOURCE_OBJ)

valgrind:
	valgrind --leak-check=full -v $(BINDIR)/$(CPP_FILE)
