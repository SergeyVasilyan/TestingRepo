TOP := $(PWD)
DIR := $(TOP)/src/thread_project/obj
SDIR := $(TOP)/src/thread_project
BINDIR := $(TOP)/src/thread_project/bin
LIB := $(TOP)/src/thread_project/lib
TARGET := thread
SOURCE_CPP = $(SDIR)/$(TARGET).cpp
SOURCE_OBJ = $(ODIR)/$(TARGET).o
SOURCE_lib = $(ODIR)/$(TARGET).so

CXX = g++

$(BINDIR)/$(TARGET): $(0DIR) $(SOURCE_OBJ)
	${CXX} $(SOURCE_OBJ) -o $(BINDIR)/$(TARGET)

$(SOURCE_OBJ):
	${CXX} -c $(SOURCE_CPP) -o $(SOURCE_OBJ)

$(SOURCE_LIB):
	${CXX} $(SOURCE_OBJ) -shared -o $(SOURCE_LIB)

valgrind:
	valgrind --leak-check=full -v $(BINDIR)/$(TARGET)

