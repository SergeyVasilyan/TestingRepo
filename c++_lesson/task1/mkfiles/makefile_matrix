TOP := $(PWD)
ODIR := $(TOP)/obj
SDIR := $(TOP)/src/matrix
BINDIR := $(TOP)/bin
TARGET := matrix
SOURCE_CPP = $(SDIR)/main.cpp $(SDIR)/matrix.cpp 
SOURCE_OBJ = $(ODIR)/main.o $(ODIR)/matrix.o
FLAG = -std=c++11
CXX = g++

$(BINDIR)/$(TARGET): $(0DIR) $(SOURCE_OBJ)
	${CXX} $(FLAG) $(SOURCE_OBJ) -o $(BINDIR)/$(TARGET)

$(SOURCE_OBJ): $(SOURCE_CPP)
	 ${CXX} -c $(FLAG) $(SDIR)/matrix.cpp -o $(ODIR)/matrix.o
	 ${CXX} -c $(FLAG) $(SDIR)/main.cpp -o $(ODIR)/main.o

.PHONY: clean
clean:
	rm $(SOURCE_OBJ) $(BINDIR)/$(TARGET)

