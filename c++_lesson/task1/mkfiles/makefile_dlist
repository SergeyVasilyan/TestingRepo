TOP := $(PWD)
ODIR := $(TOP)/obj
SDIR := $(TOP)/src/double_list
BINDIR := $(TOP)/bin
TARGET := dlist
SOURCE_CPP = $(SDIR)/main.cpp
SOURCE_OBJ = $(patsubst %.cpp, $(ODIR)/%.o, $(notdir $(SOURCE_CPP)))
FLAG = -std=c++11
CXX = g++

#$(error hello $(SOURCE_OBJ))

$(BINDIR)/$(TARGET): $(SOURCE_OBJ)
	${CXX} $^ -o $@

$(ODIR)/%.o: $(SDIR)/%.cpp
	 ${CXX} -c $(FLAG) $< -o $@

.PHONY: clean
clean:
	rm $(SOURCE_OBJ) $(BINDIR)/$(TARGET)
